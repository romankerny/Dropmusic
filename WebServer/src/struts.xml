<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <!-- devMode equals debug information and reload everything for every request -->
    <constant name="struts.devMode" value="true" />
    <constant name="struts.ui.theme" value="simple" />

    <package name="webserver" extends="struts-default">


    <interceptors>
        <interceptor name="LoginInterceptor" class="webserver.interceptor.LoginInterceptor" />
        <interceptor-stack name="loginStack">
            <interceptor-ref name="LoginInterceptor" />
            <interceptor-ref name="defaultStack" /> <!-- pelo q percebi Ã© 1 interceptor da framework -->
        </interceptor-stack>
    </interceptors>

    <default-interceptor-ref name="loginStack"></default-interceptor-ref>

        <default-action-ref name="index"/>

        <global-results>
            <result name="error">/WEB-INF/error.jsp</result>
            <result name="login">/WEB-INF/index.jsp</result>
        </global-results>


        <!-- all exceptions not caught by the application will lead to error.jsp -->
        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="error" />
        </global-exception-mappings>

        <!-- 'index' action leads to the view provided by index.jsp -->
        <action name="index">
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result>/WEB-INF/index.jsp</result>
        </action>

        <action name="dropmusic">
            <result>/WEB-INF/dropmusic.jsp</result>
        </action>

        <action name="search" class="webserver.action.SearchAction" method="execute">
            <result>/search.jsp</result>
        </action>



        <!-- 'login' action calls 'execute' in 'LoginAction' -->
        <action name="login" class="webserver.action.LoginAction" method="execute">
            <interceptor-ref name="defaultStack"></interceptor-ref>  <!-- Use default Stack, not loginStack -->
            <result name="success">/WEB-INF/dropmusic.jsp</result>
            <result name="input">/WEB-INF/index.jsp</result>
        </action>

        <action name="register-direct">
            <interceptor-ref name="defaultStack"></interceptor-ref>
            <result>/WEB-INF/register.jsp</result>
        </action>


        <action name="register" class="webserver.action.RegisterAction" method="execute">
            <interceptor-ref name="defaultStack"></interceptor-ref>  <!-- Use default Stack, not loginStack -->
            <result name="success">/WEB-INF/index.jsp</result>
            <result name="input">/WEB-INF/register.jsp</result>
        </action>



    </package>


</struts>